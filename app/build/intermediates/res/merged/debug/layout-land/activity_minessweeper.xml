<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Minessweeper_main"
        android:background="#FFF"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:background="@drawable/gradient_backgr">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/title_main"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="40sp"
                android:gravity="center"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/options"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">


            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bt_help"
                android:textColor="#fff"
                android:id="@+id/button"
                android:onClick="clickHelp"
                android:background="@drawable/button_default_style"
                android:layout_alignRight="@+id/button2"
                android:layout_alignEnd="@+id/button2"
                android:layout_alignLeft="@+id/button2"
                android:layout_alignStart="@+id/button2" />

            <Button
                android:layout_margin="5sp"
                style="?android:attr/buttonStyleSmall"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="@string/bt_start"
                android:id="@+id/button2"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/button"
                android:onClick="clickStart"
                android:background="@drawable/button_default_style"
                />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bt_exit"
                android:id="@+id/button3"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/button2"
                android:onClick="clickExit"
                android:background="@drawable/button_default_style"
                android:layout_alignRight="@+id/button2"
                android:layout_alignEnd="@+id/button2"
                android:layout_alignLeft="@+id/button2"
                android:layout_alignStart="@+id/button2"
                />            <Button
                style="?android:attr/buttonStyleSmall"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bt_query"
                android:id="@+id/button4"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/button3"
                android:onClick="clickExit"
                android:background="@drawable/button_default_style"
                android:layout_alignRight="@+id/button2"
                android:layout_alignEnd="@+id/button2"
                android:layout_alignLeft="@+id/button2"
                android:layout_alignStart="@+id/button2"
                />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
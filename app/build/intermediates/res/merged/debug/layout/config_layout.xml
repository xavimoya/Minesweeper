<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/gradient_backgr">

        <TextView
            android:id="@+id/configtext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/title_config"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="35sp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp">
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user64"
                />
        <LinearLayout
            android:id="@+id/firstlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">
        <TextView
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:text="@string/alias_player"
            android:id="@+id/textView_alias"
            android:textColor="#000"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:text="@string/result_et1"/>
        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/size64"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                >
        <TextView
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:text="@string/parrilla"
            android:id="@+id/textView_parrilla"
            android:textColor="#000"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <EditText
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText_parrilla"
            android:inputType="number"
            android:text="5"
            />

            </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/time64"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                >
        <TextView
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:text="@string/time_control"
            android:id="@+id/textView_time"
            android:textColor="#000"
            android:textSize="17sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_checkbox"
            android:id="@+id/checkBox"
            android:checked="false" />
            <EditText
                android:layout_marginLeft="15sp"
                android:id="@+id/textTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="#000"
                android:visibility="invisible"/>
        </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dificultad64"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">
        <TextView
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:text="@string/Mines_porc"
            android:id="@+id/textView_mines"
            android:textColor="#000"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/radiogroup">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%15"
                android:id="@+id/radioButton1" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%25"
                android:id="@+id/radioButton2"
                android:checked="true"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%35"
                android:id="@+id/radioButton3" />
        </RadioGroup>
        </LinearLayout>
            </LinearLayout>
            </LinearLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/bt_startgame"
            android:id="@+id/bt_startgame"
            android:layout_gravity="center_horizontal"
            android:onClick="clickStartGame"
            android:textColor="#fff"
            android:background="@drawable/button_default_style"/>
    </LinearLayout>

</LinearLayout>